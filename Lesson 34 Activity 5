import java.util.Scanner;

class Lesson_34_Activity_Five {
  
   public static int sumEven(int [] a)
    {
     int sum = 0;
     
     for (int i = 0; i < a.length; i++)
       if (a[i] % 2 == 0){
       sum = sum + a[i];
     }
     return sum;
    }
  
    public static void main(String[] args)
    {
      int a[] = {2, 4, 7};
      
      System.out.println("even sum: " + sumEven(a));
    }
}
