//THIS IS INCOMPLETE!!!!

import java.util.Scanner;

class Main
{
public static void main(String[] args)
{
	Scanner scan = new Scanner(System.in);
	
	System.out.println("Please enter a tweet:");
	String tweet = scan.nextLine();
	int length = tweet.length();
	int over = length - 140;
	
	String capsTweet = tweet.toLowerCase();
	int rtChar = capsTweet.indexOf("rt:");
	
	
	int hashtagChar = tweet.indexOf ("#");
	int hashtags = 0;
	
	int mentionChar = tweet.indexOf ("@");
	int mentions = 0;
	String restOfTweet = tweet;
	
	while ( hashtagChar != -1 )
	{
		hashtags++;
		restOfTweet = restOfTweet.substring(hashtagChar + 1, restOfTweet.length());
		
		hashtagChar = restOfTweet.indexOf("#");
		
		if (restOfTweet.length() == 0)
		hashtags--;
	}

	
	while ( mentionChar != -1 )
	{
		restOfTweet = tweet;
		mentions++;
		restOfTweet = restOfTweet.substring(mentionChar + 1, restOfTweet.length());
		
		mentionChar = restOfTweet.indexOf("@");
		
		if (restOfTweet.length() == 0)
		mentions--;
	}
	
	
	if ( length > 140 )
	System.out.println("Excess Characters: " + over);
	
	else
	{
		System.out.println("Length Correct");
		System.out.println("Mentions: " + mentions);
		System.out.println("Hashtags: " + hashtags);
		
		if ( rtChar != -1)
		System.out.println("The input was a retweet.");
		else
		System.out.println("The input was not a retweet.");
		
		
	}
	}
	}
	
		
